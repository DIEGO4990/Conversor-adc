#include <SPI.h>
#include <RF24.h>

#define CE_PIN 4
#define CSN_PIN 5
#define LED_PIN 2

RF24 radio(CE_PIN, CSN_PIN);
const byte address[6] = "00001";

void setup() {
  Serial.begin(115200);
  pinMode(LED_PIN, OUTPUT);

  if (!radio.begin()) {
    Serial.println("Erro ao iniciar mÃ³dulo NRF24");
    while (true);
  }

  radio.openReadingPipe(0, address);
  radio.setPALevel(RF24_PA_LOW);
  radio.startListening();

  Serial.println("ðŸ“¡ Receptor NRF pronto! Aguardando comandos...");
}

void loop() {
  if (radio.available()) {
    char msg[32] = "";
    radio.read(&msg, sizeof(msg));

    Serial.print("Comando recebido via NRF: ");
    Serial.println(msg);

    if (String(msg).indexOf("LED_ON") != -1) {
      digitalWrite(LED_PIN, HIGH);
    }
  }
}
